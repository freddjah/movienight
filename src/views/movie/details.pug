extends ../layout

block content
  div.col-sm-12.col-lg-10.offset-lg-1.bg-light.p-3
    div.row
      div.col-sm-12.col-lg-6
        img(src=`https://image.tmdb.org/t/p/w780${movie.poster_path}`, alt=`${movie.title} - Poster`).img-fluid

      div.col-sm-12.col-lg-6
        h1
          =`${movie.title} `
          span.bg-warning.badge.badge-secondary=`${movie.vote_average}`

        if (movie.genres.length)
          ul.inline-list.mt-3
            each genre in movie.genres
              li.inline-list
                span.bg-info.badge.badge-secondary=`${genre.name}`

        if (movie.spoken_languages.length)
          ul.inline-list
            each language in movie.spoken_languages
              li.inline-list
                span.badge.badge-secondary=`${language.iso_639_1}`
        
        h6 Runtime
        p=`${movie.runtime} minutes`

        h6 Plot
        p=movie.overview

        h6 Budget
        p=`${movie.budget} USD`

        h6 Revenue
        p=`${movie.revenue} USD`

        h6 Release date
        p=movie.release_date
        
  div.col.sm-12.col-lg-10.offset-lg-1.bg-dark.p-3
    div.text-white
        if (movie.trailers)
          h1 Trailers and clips
          ul.inline-list.text-center.mt-3
            each trailer in movie.trailers
              if (trailer.site === "YouTube")
                li.inline-list
                  iframe(src=`https://www.youtube.com/embed/${trailer.key}` frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)

                