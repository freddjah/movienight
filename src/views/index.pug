extends layout

block content
  div.col-sm-12
    div.row
      each list in lists
        if (list)
          -movies= list.movies.slice(0, 6)
          div.col-sm-12.p-3.mb-3.bg-moviewhite
            div.container
              div.row
                h3.mb-3.text-moviered=list.displayName

              div.row
                if (movies.length > 0)
                  each movie in movies
                    if (movie.poster_path)
                      div.col-6.col-sm-4.col-lg-2.mb-4
                        a(href=`/movies/${movie.id}`)
                          img(src=`https://image.tmdb.org/t/p/w780${movie.poster_path}`).img-thumbnail

              div.row.float-right
                a(href=`/movies/${list.name}`)  
                  button.btn.btn-dark.btn-sm Browse more...

